@model LibApp.Models.Book

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Authore Name: @Model.AuthorName</li>
    <li>Genre: @Model.Genre.Name</li>
    <li>Relase Date: @Model.RelaseDate</li>
    <li>Date Added: @Model.DateAdded</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>